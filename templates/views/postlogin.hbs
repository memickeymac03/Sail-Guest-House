        }
    ]
    let localdata = data
    buildtable();
    function buildtable() {

        sec = "";
        for (let j = 0; j < localdata.length; j++) {
            sec += ` <div class="g-2 m-3 p-4">
                        <h1 class="text-center p-4" id="hotel">${localdata[j].name}</h1>
                        <div class="row gx-0" id="card${j}">
                        </div>
                    </div> `
                ;
        }
        document.getElementById("section").innerHTML = sec;



        for (let k = 0; k < localdata.length; k++) {
            txtstr1 = "";
            for (let i = 0; i < localdata[k].rooms; i++) {
                try{
                if(localdata[k].Guest[i].gname == "") {
                    txtstr1 += `<a href="" style="background-color:" class="rooms" id="a${i}" >Room : <br>  <br> </a>` ;
                }
                else {
                    txtstr1 += `<a href="" style="background-color:red" class="rooms" id="a${i}" >Room : <br>  <br> </a>` ;
                }
                }
                catch{
                    txtstr1 += `<a href="" style="background-color:red" class="rooms" id="a${i}" >Room : <br>  <br> </a>` ;
                }
            }
            document.getElementById(`card${k}`).innerHTML = txtstr1;
        }
    }
</script>

